<!DOCTYPE html>
<html>
    <head>
        <!-- Trimorph Portal: v2 -->
        <!-- By Trimorph/Zack -->

        <title>Trimorph's Portfolio</title>

        <!-- Metadata -->
        <meta name="author" content="Zack Pace">
        <meta name="tags" content="zack pace, zack, pace, trimorph, portal, trimorph portfolio, trimorph portal, about trimorph, web dev, web development, dev, java, bukkit, spigot, spigot plugins, bukkit plugins">
        <meta name="description" content="A list of all of the (interesting and/or decent) projects by Trimorph.">

        <!-- Stylesheets -->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
        <link rel="stylesheet" href="./css/trimorph.css">
        <link rel="stylesheet" href="./css/prism.css">
    </head>

    <body>
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-dark trimorph-dark">
            <a class="navbar-brand" href="/">
                <img src="https://cravatar.eu/helmhead/Trimorph/40.png">
            </a>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="#">Home</a>
                    </li>
                </ul>
                <ul class="navbar-nav my-2 my-lg-0">
                    <li class="nav-item active">
                        <a class="nav-link" href="https://www.youtube.com/channel/UClDixWliA79i2-TqF2tg0MA">Youtube</a>
                    </li>
                    
                    <li class="nav-item active">
                        <a class="nav-link" href="https://twitter.com/TrimorphYT">Twitter</a>
                    </li>

                    <li class="nav-item active">
                        <a class="nav-link" href="https://github.com/trimorphdev">Github</a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Content Section -->
        <div class="container-fluid trimorph-content">
            <% posts.forEach(post => { %>
                <div class="card">
                    <h1 class="card-title"><%- post.title %></h1>
                    <%- post.body %>

                    <% Object.keys(post.links).forEach(link => { %>
                        <a class="btn btn-primary btn-md mt-1 mb-1" href="<%= post.links[link] %>"><%= link %></a>
                    <% }) %>
                </div>
            <% }) %>
            <br>
            <p class="text-muted">Copyright &copy; Zack Pace 2020</p>
        </div>

        <!-- Scripts -->
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
        <script src="./js/prism.js"></script>
    </body>
</html>